{
  "name": "typescript-cli",
  "version": "0.0.1",
  "description": "CLI to generate TypeScript Boilerplate",
  "main": "dist/index.js",
  "repository": "git@github.com:AryanshMahato/typescript-cli.git",
  "author": "AryanshMahato <aryanshmahato@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "mocha --reporter spec --require ts-node/register 'src/**/*.test.ts'",
    "start:dev": "npm run build && concurrently \"npm run watch\" \"npm run dev\"",
    "start": "node dist/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "nodemon dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^14.11.4",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "keywords": [
    "typescript",
    "typescript-cli",
    "typescript-boilerplate",
    "ts-cli",
    "ts-boilerplate"
  ],
  "bugs": {
    "url": "https://github.com/AryanshMahato/typescript-cli/issues"
  },
  "homepage": "https://github.com/AryanshMahato/typescript-cli#readme",
  "dependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "mocha": "^8.2.0",
    "ts-node": "^9.0.0"
  }
}
